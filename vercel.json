{
    "version": 2,
    "builds": [
      {
        "src": "api/**/*.ts",
        "use": "@vercel/node"
      },
        {
            "src": "pages/**/*.tsx",
            "use": "@vercel/next"
        },
        {
            "src": "public/**/*",
            "use": "@vercel/static"
        },
        {
            "src": "styles/**/*.css",
            "use": "@vercel/static"
        },
        {
            "src": "components/**/*.tsx",
            "use": "@vercel/static"
        }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "api/$1"
      },
      {
        "src": "/(.*)",
        "dest": "/$1"
      },
        {
            "src": "/(.*)",
            "dest": "/pages/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/public/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/styles/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/components/$1"
        }
    ]
}